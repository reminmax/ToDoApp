<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoApp.Pages.Fragments.LoadingView"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit" 
             HorizontalOptions="Center"
             VerticalOptions="Center"
             BackgroundColor="Transparent">

    <ActivityIndicator
            Color="{AppThemeBinding Light={StaticResource DarkPrimaryColor}, Dark={StaticResource DarkPrimaryTextColor}}"
            IsRunning="True"/>
    <Label 
            Text="{xct:Translate Loading}" 
            TextColor="{AppThemeBinding Light={StaticResource LightSecondaryTextColor}, Dark={StaticResource DarkSecondaryTextColor}}"
            Style="{StaticResource Body1_MulishSemiBold}"
            HorizontalOptions="Center"/>
    
</StackLayout>